<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics"
    android:background="@drawable/bg4019521">

    <TextView
        android:id="@+id/textViewStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="28dp"

        android:text="Statistics"
        android:textAlignment="center"

        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStat"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:background="@drawable/imagetest"
        android:textColor="	#FFFFFF"
        android:layout_marginStart="75dp"
        android:layout_marginTop="552dp"
        android:layout_marginBottom="40dp"
        android:onClick="homepage"
        android:text="Go back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStat2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStat"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/buttonStat2"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:background="@drawable/imagetest"
        android:textColor="	#FFFFFF"
        android:layout_marginTop="552dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="40dp"
        android:onClick="refresh"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStat" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Total Books in Collection: "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewTotalCollection"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStat" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Total Books in Reading list:"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewrReadingList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Total Books in Wishlist: "
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewWishList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Total Books Lent: "
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewLendInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textViewWishList"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewrReadingList" />

    <TextView
        android:id="@+id/textViewLendInfo"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWishList" />

    <TextView
        android:id="@+id/textViewTotalCollection"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStat" />

    <TextView
        android:id="@+id/textViewrReadingList"
        android:layout_width="125dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalCollection" />

</androidx.constraintlayout.widget.ConstraintLayout>